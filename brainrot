-- Age of Heroes - AutoClick Suave con Animación (Mobile)
-- Hecho por Adrian (MACRO UI) - Antiban

-- CONFIGURACIÓN
local clicksPorToque = 4           -- Clics por toque (ajustado para evitar baneo)
local delayEntreClicks = 0.035     -- Delay suave, evita detección
local activarAnimacion = true      -- Mostrar animación al atacar

-- FUNCIÓN: Click simulado
local function simularClick()
    local virtualUser = game:GetService("VirtualUser")
    virtualUser:Button1Down(Vector2.new(), workspace.CurrentCamera.CFrame)
    wait()
    virtualUser:Button1Up(Vector2.new(), workspace.CurrentCamera.CFrame)
end

-- FUNCIÓN: Animación de ataque (brazo levantado rápido)
local function animarGolpe()
    local plr = game.Players.LocalPlayer
    local char = plr.Character or plr.CharacterAdded:Wait()
    local humanoide = char:FindFirstChildOfClass("Humanoid")

    if humanoide then
        local anim = Instance.new("Animation")
        anim.AnimationId = "rbxassetid://218504594" -- animación genérica de puño (se ve real)
        local track = humanoide:LoadAnimation(anim)
        track:Play()
        track:AdjustSpeed(2.5) -- velocidad rápida para que se vea fluido
    end
end

-- DETECCIÓN DE TOQUE EN MÓVIL
game:GetService("UserInputService").TouchStarted:Connect(function()
    for i = 1, clicksPorToque do
        task.spawn(simularClick)
        if activarAnimacion then
            task.spawn(animarGolpe)
        end
        task.wait(delayEntreClicks)
    end
end)

-- NOTIFICACIÓN INICIAL
pcall(function()
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "AutoGolpe Activado",
        Text = "Golpes visibles + antidelay",
        Duration = 3
    })
end)
