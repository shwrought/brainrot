local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")
local tweenService = game:GetService("TweenService")

local basePosition = nil

-- UI
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "TweenTPGui"

local saveBtn = Instance.new("TextButton", gui)
saveBtn.Text = "üìç Guardar Base"
saveBtn.Size = UDim2.new(0, 160, 0, 40)
saveBtn.Position = UDim2.new(0, 20, 0, 100)
saveBtn.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
saveBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
saveBtn.Font = Enum.Font.SourceSansBold
saveBtn.TextSize = 18

local tpBtn = Instance.new("TextButton", gui)
tpBtn.Text = "üö∂ Ir a Base"
tpBtn.Size = UDim2.new(0, 160, 0, 40)
tpBtn.Position = UDim2.new(0, 20, 0, 150)
tpBtn.BackgroundColor3 = Color3.fromRGB(60, 0, 0)
tpBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
tpBtn.Font = Enum.Font.SourceSansBold
tpBtn.TextSize = 18

-- Guardar posici√≥n
saveBtn.MouseButton1Click:Connect(function()
    char = player.Character or player.CharacterAdded:Wait()
    hrp = char:FindFirstChild("HumanoidRootPart")
    if hrp then
        basePosition = hrp.Position
        saveBtn.Text = "‚úÖ Base Guardada"
        wait(1)
        saveBtn.Text = "üìç Guardar Base"
    end
end)

-- Tween TP
tpBtn.MouseButton1Click:Connect(function()
    char = player.Character or player.CharacterAdded:Wait()
    hrp = char:FindFirstChild("HumanoidRootPart")

    if basePosition and hrp then
        local dist = (basePosition - hrp.Position).Magnitude
        local timeToMove = dist / 100 -- Ajusta velocidad aqu√≠ (m√°s bajo = m√°s r√°pido)

        local tween = tweenService:Create(hrp, TweenInfo.new(timeToMove, Enum.EasingStyle.Linear), {
            CFrame = CFrame.new(basePosition + Vector3.new(0, 3, 0))
        })

        tween:Play()
    else
        tpBtn.Text = "‚ö†Ô∏è No guardaste la base"
        wait(1.5)
        tpBtn.Text = "üö∂ Ir a Base"
    end
end)
