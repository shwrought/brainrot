-- ✅ Botón flotante para activar Tool (click real en mobile)
local player = game:GetService("Players").LocalPlayer
local UIS = game:GetService("UserInputService")
local StarterGui = game:GetService("StarterGui")
local PlayerGui = player:WaitForChild("PlayerGui")
local Backpack = player:WaitForChild("Backpack")

-- Esperar a que la Tool esté lista
local tool = Backpack:WaitForChild("ClickTool")
tool.Parent = player.Character -- Equipar automáticamente

-- Crear GUI
local gui = Instance.new("ScreenGui")
gui.Name = "AutoClickToolUI"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.Parent = PlayerGui

-- Botón flotante
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 120, 0, 45)
button.Position = UDim2.new(0, 150, 0, 150)
button.BackgroundColor3 = Color3.fromRGB(255, 0, 40)
button.Text = "AutoClick"
button.TextColor3 = Color3.new(1, 1, 1)
button.TextScaled = true
button.Font = Enum.Font.GothamBold
button.Parent = gui

-- Drag
local dragging = false
local dragStart, startPos, dragInput

local function updateDrag(input)
	local delta = input.Position - dragStart
	button.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X,
		startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

button.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = button.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

button.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.Touch then
		dragInput = input
	end
end)

UIS.InputChanged:Connect(function(input)
	if input == dragInput and dragging then
		updateDrag(input)
	end
end)

-- AutoClick activado al tocar botón
button.MouseButton1Click:Connect(function()
	for i = 1, 4 do
		tool:Activate() -- Simula golpe real
		task.wait(0.04)
	end
end)

-- Notificación
pcall(function()
	StarterGui:SetCore("SendNotification", {
		Title = "AutoClick Tool",
		Text = "Clics reales activados por botón",
		Duration = 3
	})
end)
