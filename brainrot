-- ✅ Botón flotante autoclick (Mobile compatible)
-- MACRO UI - Por Adrian
local player = game:GetService("Players").LocalPlayer
local UIS = game:GetService("UserInputService")
local VirtualUser = game:GetService("VirtualUser")

-- Crear GUI
local gui = Instance.new("ScreenGui")
gui.Name = "AutoClickGUI"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

-- Crear botón flotante
local button = Instance.new("TextButton")
button.Name = "AutoClickButton"
button.Size = UDim2.new(0, 100, 0, 40)
button.Position = UDim2.new(0, 150, 0, 150)
button.BackgroundColor3 = Color3.fromRGB(200, 0, 40)
button.Text = "AutoClick"
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.GothamBold
button.TextScaled = true
button.Parent = gui

-- Hacer botón movible con Touch
local dragging = false
local dragInput
local dragStart
local startPos

local function update(input)
	local delta = input.Position - dragStart
	button.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X,
		startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

button.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = true
		dragStart = input.Position
		startPos = button.Position

		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

button.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseMovement then
		dragInput = input
	end
end)

UIS.InputChanged:Connect(function(input)
	if input == dragInput and dragging then
		update(input)
	end
end)

-- Función de autoclick real
local function simularClick()
	VirtualUser:Button1Down(Vector2.new(), workspace.CurrentCamera.CFrame)
	task.wait()
	VirtualUser:Button1Up(Vector2.new(), workspace.CurrentCamera.CFrame)
end

-- Al presionar el botón, hace clics simulados
button.MouseButton1Click:Connect(function()
	for i = 1, 4 do -- Número de clics por toque
		task.spawn(simularClick)
		task.wait(0.035) -- Delay entre clics
	end
end)

-- Notificación opcional
pcall(function()
	game:GetService("StarterGui"):SetCore("SendNotification", {
		Title = "AutoClick Activo",
		Text = "Botón flotante listo para usar.",
		Duration = 3
	})
end)
