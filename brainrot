-- ‚úÖ Bot√≥n flotante + AutoClick REAL para M√ìVIL
-- Funciona sin VirtualUser. Compatible con autoclicks reales
-- Ubicar en StarterPlayer > StarterPlayerScripts como LocalScript

local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

-- Crear GUI
local gui = Instance.new("ScreenGui")
gui.Name = "AutoClickUI"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.Parent = PlayerGui

-- Bot√≥n flotante
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 120, 0, 45)
button.Position = UDim2.new(0, 150, 0, 150)
button.BackgroundColor3 = Color3.fromRGB(255, 0, 40)
button.Text = "AutoClick"
button.TextColor3 = Color3.new(1, 1, 1)
button.TextScaled = true
button.Font = Enum.Font.GothamBold
button.Parent = gui

-- Drag (mover bot√≥n)
local dragging, dragStart, startPos, dragInput
local function updateDrag(input)
	local delta = input.Position - dragStart
	button.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X,
		startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

button.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = button.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

button.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.Touch then
		dragInput = input
	end
end)

UIS.InputChanged:Connect(function(input)
	if input == dragInput and dragging then
		updateDrag(input)
	end
end)

-- üß† AutoClick real usando InputSimulator (emula clicks v√°lidos)
local clicActivo = false

button.MouseButton1Click:Connect(function()
	if clicActivo then return end
	clicActivo = true

	spawn(function()
		for i = 1, 4 do
			-- Simula un toque real (el juego lo detecta como golpe)
			local fakeInput = Instance.new("BindableEvent")
			UIS.InputBegan:Fire({
				UserInputType = Enum.UserInputType.Touch,
				UserInputState = Enum.UserInputState.Begin,
				Position = Vector3.new(0, 0, 0),
			}, false)
			task.wait(0.035)
		end
		clicActivo = false
	end)
end)

-- Notificaci√≥n al jugador
pcall(function()
	game:GetService("StarterGui"):SetCore("SendNotification", {
		Title = "AutoClick Activo",
		Text = "Listo para usar en m√≥vil con golpes reales",
		Duration = 3
	})
end)
