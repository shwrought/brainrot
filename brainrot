-- Steal a Brainrot - GUI T√°ctica
-- Instant pickup + velocidad + return base

local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")
local humanoid = char:WaitForChild("Humanoid")
local targetSpawnName = "SpawnLocation" -- Cambia si tu base se llama distinto

-- UI
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "BrainrotTactico"
gui.ResetOnSpawn = false

-- Frame principal
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 220, 0, 180)
frame.Position = UDim2.new(0, 20, 0, 200)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
frame.BorderSizePixel = 0

-- T√≠tulo
local title = Instance.new("TextLabel", frame)
title.Text = "üß† Macro Brainrot"
title.Size = UDim2.new(1, 0, 0, 30)
title.TextColor3 = Color3.new(1, 1, 1)
title.BackgroundTransparency = 1
title.Font = Enum.Font.SourceSansBold
title.TextSize = 18

-- Bot√≥n: Recoger Brainrot
local pickupBtn = Instance.new("TextButton", frame)
pickupBtn.Text = "‚ö° Recoger Brainrot"
pickupBtn.Size = UDim2.new(1, -20, 0, 40)
pickupBtn.Position = UDim2.new(0, 10, 0, 40)
pickupBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
pickupBtn.TextColor3 = Color3.new(1,1,1)
pickupBtn.Font = Enum.Font.SourceSansBold
pickupBtn.TextSize = 16

-- Bot√≥n: Volver a Base
local returnBtn = Instance.new("TextButton", frame)
returnBtn.Text = "üè† Ir a Base"
returnBtn.Size = UDim2.new(1, -20, 0, 40)
returnBtn.Position = UDim2.new(0, 10, 0, 90)
returnBtn.BackgroundColor3 = Color3.fromRGB(80, 0, 0)
returnBtn.TextColor3 = Color3.new(1,1,1)
returnBtn.Font = Enum.Font.SourceSansBold
returnBtn.TextSize = 16

-- Slider: Velocidad
local speedLabel = Instance.new("TextLabel", frame)
speedLabel.Text = "üèÉ Velocidad: 16"
speedLabel.Size = UDim2.new(1, -20, 0, 20)
speedLabel.Position = UDim2.new(0, 10, 0, 140)
speedLabel.TextColor3 = Color3.new(1, 1, 1)
speedLabel.BackgroundTransparency = 1
speedLabel.Font = Enum.Font.SourceSans
speedLabel.TextSize = 14

-- FUNCIONES

-- Recojo instant√°neo
pickupBtn.MouseButton1Click:Connect(function()
    local found = false
    for _, obj in ipairs(workspace:GetDescendants()) do
        if obj.Name == "Brainrot" and obj:IsA("BasePart") and (obj.Position - hrp.Position).Magnitude <= 15 then
            firetouchinterest(hrp, obj, 0)
            wait()
            firetouchinterest(hrp, obj, 1)
            found = true
        end
    end
    pickupBtn.Text = found and "‚úÖ Recogido" or "‚ùå No Brainrot cerca"
    wait(1.5)
    pickupBtn.Text = "‚ö° Recoger Brainrot"
end)

-- Volver a base autom√°ticamente sin soltar brainrot
returnBtn.MouseButton1Click:Connect(function()
    local spawn = workspace:FindFirstChild(targetSpawnName)
    if spawn then
        local goal = spawn.Position + Vector3.new(0, 5, 0)
        local stepSpeed = 20
        returnBtn.Text = "üè† Caminando..."
        while (hrp.Position - goal).Magnitude > 5 do
            local dir = (goal - hrp.Position).Unit
            hrp.CFrame = hrp.CFrame + dir * stepSpeed
            wait(0.02)
        end
        returnBtn.Text = "‚úÖ Llegaste"
    else
        returnBtn.Text = "‚ùå No se encontr√≥ Spawn"
    end
    wait(1.5)
    returnBtn.Text = "üè† Ir a Base"
end)

-- CAMBIAR VELOCIDAD con teclas [+] y [-]: opcional
local UserInputService = game:GetService("UserInputService")
local currentSpeed = 16

UserInputService.InputBegan:Connect(function(input, gpe)
    if gpe then return end
    if input.KeyCode == Enum.KeyCode.Equals then
        currentSpeed = currentSpeed + 2
        humanoid.WalkSpeed = currentSpeed
        speedLabel.Text = "üèÉ Velocidad: " .. tostring(currentSpeed)
    elseif input.KeyCode == Enum.KeyCode.Minus then
        currentSpeed = math.max(8, currentSpeed - 2)
        humanoid.WalkSpeed = currentSpeed
        speedLabel.Text = "üèÉ Velocidad: " .. tostring(currentSpeed)
    end
end)

-- Inicializar velocidad
humanoid.WalkSpeed = currentSpeed
